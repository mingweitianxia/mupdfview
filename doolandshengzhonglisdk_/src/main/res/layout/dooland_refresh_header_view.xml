<com.dooland.pull.view.RefreshHeadView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refreshheaderview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center" >

        <RelativeLayout
            android:id="@+id/pull_header_rl"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/transparent" >

            <TextView
                android:id="@+id/pull_header_text"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/r_pull_refresh" />

            <com.dooland.pull.view.RingView
                android:id="@+id/pull_header_ring"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/pull_header_text" />
        </RelativeLayout>
    </LinearLayout>

</com.dooland.pull.view.RefreshHeadView>
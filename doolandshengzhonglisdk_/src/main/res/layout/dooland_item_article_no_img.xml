<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


        <LinearLayout
            android:layout_margin="@dimen/public_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/introTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="XXXXXXXX"
                android:textColor="@android:color/black"
                android:textSize="@dimen/tv_size_small" />

            <TextView
                android:id="@+id/dateTv"
                android:layout_marginTop="@dimen/artcle_item_tv_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/tv_size_xsmall" />
        </LinearLayout>

</LinearLayout>